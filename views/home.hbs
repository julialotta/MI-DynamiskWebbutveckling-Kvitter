<h1>main</h1>

{{#if loggedIn}}
  <p>Logged in as {{username}}</p>

  <form action="/kvittra" method="post">
    <input type="text" name="content" placeholder="Kvitter your feelings" />
    <input type="submit" value="kvittra" />
  </form>

  <h2>Posts</h2>
  {{#each kvitter}}
    <article>
      <p><a href="/kvittra/read-kvitter/{{_id}}">
          {{content}}
        </a>
      </p>
      <p>{{formatDate time}}</p>
      <p>Kvittrat by: {{users.username}}</p>
    </article>
  {{/each}}
  <form action="/users/log-out" method="post">
    <input type="submit" value="Log out" />
  </form>

{{else}}

  <form action="/users/login" method="post">
    <input type="text" name="username" id="" placeholder="Username" />
    <br />
    <input type="password" name="password" id="" placeholder="Password" />
    <br />
    <input type="submit" value="Login" />
    <hr />
  </form>
  <a href="/users/register-user"><button>Register</button></a>
{{/if}}