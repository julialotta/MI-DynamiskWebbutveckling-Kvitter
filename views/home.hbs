<div class="formwrapper">
        {{#if loggedIn}}
            <p>Logged in as
                <a href="/users/profile/{{userId}}">{{username}}{{displayName}}</a>
            </p>
         
        <p class="error">
        {{error}}
        </p>

            <form action="/kvittra" method="post">

                <textarea name="content" cols="30" rows="10" placeholder="Kvitter your feelings..." style="resize: none" id="kvitterInput"></textarea>

                <div class="main-btn-container">
                <input type="submit" value="Kvitter" id="main-btn" />
                </div>
            </form>

            {{#each kvitter}}
            
                <div class="awrapper">
                        <div class="aprofilewrapper">
                            <img
                            src="/assets/profile-pitcure.png"
                            alt="profile pic"
                        />
                        </div>
                            <div class="authorwrapper">
                                <div class="someWrapper">
                                <div class="userAndDate">
                                    <span >@{{writtenBy.username}}{{writtenBy.displayName}}</span>
                                    <span class="atimewrapper">{{formatDate time}}</span>
                                </div>
                                <div class="dotscontainer">
                                    <i class="bi bi-three-dots"></i>
                                </div>
                                </div>
                                <div class="acontentwrapper">
                                    {{content}}
                                </div>
                                    <div class="{{iconFunction writtenBy._id ../userId}}">
                                        <a href="/kvittra/{{_id}}/edit">
                                        <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="kvittra/{{_id}}/delete">
                                        <i class="bi bi-trash3"></i>
                                        </a>
                                    </div>
                            </div>

                                
                            
                        
                    </div>

 



            {{/each}}
        {{else}}

        <a href="/google">Login with Google</a>
            <form action="/users/login" method="post" autocomplete="off">
                <input
                    type="text"
                    name="username"
                    id="login-input"
                    placeholder="Username"
                />
                <br />
                <input
                    type="password"
                    name="password"
                    id="login-input"
                    placeholder="Password"
                />
                <br />
                <a href="/users/register-user"><button
                        class="register-btn"
                        type="button"
                    >Register</button></a>
                <input type="submit" value="Login" id="btn-style" />
            </form>
                    <div class="textwrapper"><a href="/users/forgot">Forgot your password?</a></div>
                
        {{/if}}

    </div>