<div class="profilepage">
  <p>
    <a href="/">←</a>
  </p>

  <h2>Din profil</h2>

  {{! Profilbild }}
  <div class="user">
    <img src="/assets/profile-pitcure.png" alt="Profilbild" />

    {{! Namn }}
    <div>
      <p>Användare:</p>
      <p> {{username}} </p>
    </div>
  </div>

  {{! Slogan }}
  <div class="slogan">
    <p>Slogan:</p>
    {{#if user.slogan}}
      <p> {{user.slogan}} </p>
    {{else}}
      <p>Du har ingen slogan, klicka
        <a href="/users/profile/edit/{{userId}}{{googleId}}">här</a>
        för att lägga till</p>
    {{/if}}
  </div>

  {{error}}

  {{! Favorites}}
  <div class="slogan">
    <p>Favoriter:</p>
    {{#if favorites}}
      {{#each favorites}}
        <h5>
          {{description}}
        </h5>
        <p>
          {{post.content}}
          {{user.username}}
        </p>
      {{else}}
        <p>Du har inte valt några favoriter</p>
      {{/each}}
    {{/if}}
    <a href="/favorites/{{userId}}">Redigera favoriter</a>
  </div>

  {{! Change profile }}
  <p>
    <a href="/users/profile/edit/{{userId}}{{googleId}}">Ändra profil</a>
  </p>

  {{! Log out }}
  <form action="/users/log-out" method="post">
    <input id="btn-style" type="submit" value="Logga ut " />
  </form>

  {{! Remove user }}
  <a href="/users/delete/{{userId}}{{googleId}}">RADERA PROFIL</a>
</div>